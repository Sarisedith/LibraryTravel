@model LibraryTravel.Application.ViewModels.LibrosViewModel

@{
    ViewData["Title"] = "Listado de Libros";
}
<h1>@ViewData["Title"]</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Titulo
        </th>
        <th>
            Sinopsis
        </th>
        <th>
            N_Paginas
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Libros)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sinopsis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.N_Paginas)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ISBN }) |
                @Html.ActionLink("Details", "Details", new { id = item.ISBN }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ISBN })
            </td>
        </tr>
    }

</table>
